        <ScrollPane minWidth="256" fitToHeight="true" fitToWidth="true">
          <ContactListView fx:id="contactListView"/>
        </ScrollPane>
      </left>
    </BorderPane>
  </children>

  <fx:script source="RootPane.js"/>

